{
  "name": "inspect-api",
  "version": "0.0.0",
  "description": "Browser inspection tools using native Performance API for network request monitoring.",
  "type": "module",
  "license": "MIT",
  "homepage": "https://github.com/author/inspect-api#readme",
  "bugs": {
    "url": "https://github.com/author/inspect-api/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/author/inspect-api.git"
  },
  "author": "Author Name <author.name@mail.com>",
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsdown",
    "build:inspector": "cd vite-plugins/client && tsdown inspector.tsx --format iife --out-file inspector.js && mv dist/inspector.iife.js ./inspector.js",
    "dev:inspector": "cd vite-plugins/client && tsdown inspector.tsx --format iife --out-file inspector.js --watch && mv dist/inspector.iife.js ./inspector.js",
    "dev": "tsdown --watch",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "preview": "vite preview --open",
    "serve": "pnpm build:inspector && vite"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.14",
    "@types/node": "^24.7.2",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "^10.4.21",
    "bumpp": "^10.3.1",
    "code-inspector-plugin": "^1.2.10",
    "postcss": "^8.5.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwindcss": "^4.1.14",
    "tsdown": "^0.15.6",
    "typescript": "^5.9.3",
    "vite": "^7.1.10",
    "vitest": "^3.2.4"
  }
}
